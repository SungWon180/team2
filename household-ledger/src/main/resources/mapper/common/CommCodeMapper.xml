<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team2.householdledger.common.mapper.CommCodeMapper">
    <select id="findByGrpCd" resultType="CommCodeDTO">
    SELECT comm_cd
         , grp_cd
         , comm_nm
         , sort_no
         , use_yn
      FROM comm_code
     WHERE grp_cd = #{grpCd}
       AND use_yn = 'Y'
     ORDER BY sort_no ASC
    </select>
</mapper>